.index-block {
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
  margin-top: 20rpx;
}
.index-block-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0rpx 30rpx;
}
.index-title-left {
  border-left-color: #3fc1c9;
  border-left-width: 6rpx;
  border-left-style: solid;
  padding-left: 10rpx;
  color: #666666;
  font-size: 32rpx;
}
.index-title-right {
  border-top: 2rpx #999999 solid;
  border-right: 2rpx #999999 solid;
  width: 16rpx;
  height: 16rpx;
  transform: rotate(45deg);
}
.index-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0rpx 30rpx;
}
